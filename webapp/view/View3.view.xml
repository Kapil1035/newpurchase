<mvc:View
    controllerName="project3.controller.View3"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <f:SimpleForm id="_IDGenSimpleForm1">
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <HBox
                    id="_IDGenHBox1"
                    class="css22"
                >
                    <VBox id="company_code1">
                        <Label
                            id="company_code2"
                            text="Company Code :"
                        />
                        <Input  id="company_code" />
                    </VBox>
                    <VBox id="vendor1">
                        <Label
                            id="vendor2"
                            text="Vendor :"
                        />
                        <Input id="vendor" />
                    </VBox>
                </HBox>

                <HBox
                    id="_IDGenHBox2"
                    class="css22"
                >
                    <VBox id="Document_Type1">
                        <Label
                            id="Document_Type2"
                            text="Document Type :"
                        />

                        <Input id="Document_Type" />
                    </VBox>

                    <VBox id="language1">
                        <Label
                            id="language2"
                            text="Language :"
                        />
                        <Input id="language" />
                    </VBox>
                </HBox>

                <HBox
                    id="_IDGenHBox3"
                    class="css22"
                >
                    <VBox id="Purchase_Organization1">
                        <Label
                            id="Purchase_Organization2"
                            text="Purchase Organisation :"
                        />
                        <Input id="Purchase_Organization" />
                    </VBox>

                    <VBox id="Purchase_Group1">
                        <Label
                            id="Purchase_Group2"
                            text="Purchase Group :"
                        />
                        <Input id="Purchase_Group" />
                    </VBox>
                    
                </HBox>

                <HBox
                    id="_IDGenHBox4"
                    class="css22"
                >
                    <VBox id="Currency1">
                        <Label
                            id="Currency2"
                            text="Currency :"
                        />
                        <Input id="Currency" />
                    </VBox>

                    <VBox id="Start_Date1">
                        <Label
                            id="Start_Date2"
                            text="VPER_START :"
                        />
                        <Input id="Start_Date" />
                    </VBox>
                </HBox>
                <HBox
                    id="_IDGenHBox5"
                    class="css22"
                >
                    <VBox id="End_Date1">
                        <Label
                            id="End_Date2"
                            text="VPER_END :"
                        />
                        <Input id="End_Date" />
                    </VBox>
                </HBox>
            </VBox>

            <Button id="button" text="Go" press="go" width="50px"></Button>
        </f:SimpleForm>


    </Page>
</mvc:View>
